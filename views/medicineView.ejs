        <p>You almost run out of <%= result%></p>
    <% } %>
<body>
    <a href="/medicine/add"><button>Add Medicine</button></a>
    <table border="2">
        <tr>
            <th>Name</th>
            <th>Stock </th>
            <th>Action</th>
    
        </tr>
        <% data.map(obj=> { %>
            <tr>
                <td>
                    <%= obj.name%>
                </td>
                <td>
                    <%= obj.stock %>
                </td>
                <td>
                    <a href="/medicine/edit/<%= obj.id %>"><button>Edit</button></a>
                    <a href="/medicine/delete/<%= obj.id %>"
                        onclick="return confirm('Delete this data?')"><button>Delete</button></a>
                </td>
            </tr>
            <% }) %>
    </table>
    <div class="container">
    <canvas id="myChart"></canvas>
    </div>
        <script>
           
            let myChart = document.getElementById('myChart').getContext('2d');

            let medChart = new Chart(myChart, {
                type: 'bar',
                data: {
                    labels: ['panadol', 'novorapid', 'epipen'],
                    datasets: [{
                        label: 'Medicine',
                        data: [21, 21, 32]
                    }]
                },
                options: {}
            })
        </script>
</body>
</html>